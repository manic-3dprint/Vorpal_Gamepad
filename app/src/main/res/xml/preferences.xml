<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <PreferenceCategory android:key="MAIN_CATEGORY">
        <CheckBoxPreference
            android:key="SDcard"
            android:title="@string/preferences_use_SDcard"
            android:summary="@string/preferences_use_SDcard_summary"
            android:defaultValue="true"
            />
        <CheckBoxPreference
            android:key="sound"
            android:title="@string/preferences_sound"
            android:summary="@string/preferences_sound_summary"
            android:defaultValue="true"
            />
        <CheckBoxPreference
            android:key="connectBluetoothAutomatically"
            android:title="@string/preferences_connect_bluetooth_automatically"
            android:summary="@string/preferences_connect_bluetooth_automatically_summary"
            android:defaultValue="true"
            />
    </PreferenceCategory>
</PreferenceScreen>
