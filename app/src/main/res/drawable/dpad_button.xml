<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <solid android:color="@color/colorDPadButtonPressed"/>
            <size android:width="@dimen/dpad_button_size" android:height="@dimen/dpad_button_size"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/colorDPadButton"/>
            <size android:width="@dimen/dpad_button_size" android:height="@dimen/dpad_button_size"/>
        </shape>
    </item>
</selector>
